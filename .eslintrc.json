{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "no-console": 0,
    "quotes": ["warn", "double"],
    "semi": ["error", "always"]
  },
  "parserOptions": {
    "ecmaVersion": 8
  }
}
